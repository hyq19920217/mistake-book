{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "import"
  ],
  "rules": {
    "import/no-default-export": "error",
    "import/named": "error",
    "vue/multi-word-component-names": "off"
  }
} 